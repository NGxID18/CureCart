<%- include('_header', { title: 'Profil Saya' }) %>

<div class="row justify-content-center reveal-on-scroll">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h4 class="mb-0">Profil Saya</h4>
            </div>
            <div class="card-body">
                <script>
                    if (new URLSearchParams(window.location.search).has('success')) {
                        document.write('<div class="alert alert-success mb-3">Profil berhasil diperbarui!</div>');
                    }
                </script>

                <form action="/profile" method="POST">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nama Lengkap</label>
                        <input type="text" name="name" class="form-control" value="<%= userProfile.name %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" value="<%= userProfile.email %>" disabled readonly>
                        <div class="form-text">Email tidak dapat diubah.</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nomor Telepon</label>
                            <input type="text" name="nomor_telepon" class="form-control" value="<%= userProfile.nomor_telepon || '' %>" placeholder="0812...">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tanggal Lahir</label>
                            <% 
                                let tgl = '';
                                if(userProfile.tanggal_lahir) {
                                    tgl = new Date(userProfile.tanggal_lahir).toISOString().split('T')[0];
                                }
                            %>
                            <input type="date" name="tanggal_lahir" class="form-control" value="<%= tgl %>">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Alamat Pengiriman</label>
                        <textarea name="alamat" class="form-control" rows="3" placeholder="Masukkan alamat lengkap..."><%= userProfile.alamat || '' %></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-orchid px-4">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('_footer') %>