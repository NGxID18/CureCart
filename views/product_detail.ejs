<%- include('_header', { title: product.name }) %>

<div class="container">
    <nav aria-label="breadcrumb" class="reveal-on-scroll">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm mb-4 reveal-on-scroll">
        <div class="card-body p-4">
            <div class="row g-5">
                <div class="col-md-5">
                    <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" alt="<%= product.name %>" class="img-fluid rounded shadow-sm w-100">
                    <% } else { %>
                        <div class="bg-secondary text-white text-center rounded" style="width: 100%; height: 400px; line-height: 400px;">No Image</div>
                    <% } %>
                </div>
                <div class="col-md-7">
                    <h2 class="fw-bold mb-3"><%= product.name %></h2>
                    <h1 class="text-danger fw-bold mb-3">Rp <%= Number(product.price).toLocaleString('id-ID') %></h1>
                    
                    <div class="mb-4">
                        <span class="badge bg-success px-3 py-2 rounded-pill">Stok Tersedia: <%= product.stock_quantity %></span>
                    </div>
                    
                    <hr class="my-4">

                    <h5 class="fw-bold">Deskripsi</h5>
                    <p class="text-muted" style="line-height: 1.8;"><%- product.description.replace(/\n/g, '<br>') %></p>

                    <hr class="my-4">

                    <form action="/cart/add/<%= product.id %>" method="POST" class="mt-4">
                        <div class="row align-items-end">
                            <div class="col-auto">
                                <label class="form-label fw-bold">Atur Jumlah</label>
                                <input type="number" id="quantity" name="quantity" class="form-control text-center" value="1" min="1" max="<%= product.stock_quantity %>" style="width: 100px;" required>
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-orchid btn-lg w-100 fw-bold">
                                    + Masukkan Keranjang
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('_footer') %>