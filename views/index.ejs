<%- include('_header', { title: 'Selamat Datang' }) %>

<h1>Selamat Datang di CureCart Shop!</h1>
<p class="lead">Lihat produk-produk terbaru kami.</p>

<div class="mb-4">
    <form action="/" method="GET" class="d-flex shadow-sm">
        <input 
            class="form-control me-2" 
            type="search" 
            placeholder="Cari produk di etalase..." 
            name="search" 
            aria-label="Search"
            value="<%= searchTerm %>" 
        >
        <button class="btn btn-success" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
        </button>
    </form>
</div>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top bg-secondary text-white text-center" style="height: 200px; line-height: 200px;">No Image</div>
                    <% } %>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="/products/<%= product.id %>" class="text-decoration-none stretched-link"><%= product.name %></a>
                        </h5>
                        <p class="card-text text-muted">Stok: <%= product.stock_quantity %></p>
                        <h4 class="text-danger">Rp <%= Number(product.price).toLocaleString('id-ID') %></h4>
                    </div>
                    
                    <div class="card-footer bg-white border-top-0">
                        <form action="/cart/add/<%= product.id %>" method="POST">
                             <div class="input-group">
                                <input type="number" name="quantity" class="form-control" value="1" min="1" max="<%= product.stock_quantity %>" onclick="event.stopPropagation();">
                                <button type="submit" class="btn btn-primary" onclick="event.stopPropagation();">Tambah</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <% if (searchTerm && searchTerm.length > 0) { %>
                <div class="alert alert-warning">
                    Produk dengan nama "<%= searchTerm %>" tidak ditemukan.
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    Belum ada produk yang tersedia.
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('_footer') %>