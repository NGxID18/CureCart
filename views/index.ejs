<%- include('_header', { title: 'Selamat Datang' }) %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 rounded">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Toko Alkes</a>
        
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if (user) { %>
                    <% if (user.is_admin) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/products"><strong>Admin Panel</strong></a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Keranjang</a>
                    </li>
                <% } %>
            </ul>

            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <% if (user) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Halo, <%= user.name %>!
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <form action="/logout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Registrasi</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<h1>Selamat Datang di Toko Alkes!</h1>
<p class="lead">Lihat produk-produk terbaru kami.</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top bg-secondary text-white text-center" style="height: 200px; line-height: 200px;">No Image</div>
                    <% } %>
                    
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/products/<%= product.id %>" class="text-decoration-none"><%= product.name %></a>
                        </h5>
                        <p class="card-text">Stok: <%= product.stock_quantity %></p>
                        <h4 class="text-danger">Rp <%= product.price %></h4>
                    </div>
                    
                    <div class="card-footer bg-white border-top-0">
                        <form action="/cart/add/<%= product.id %>" method="POST">
                            <div class="input-group">
                                <input type="number" name="quantity" class="form-control" value="1" min="1" max="<%= product.stock_quantity %>">
                                <button type="submit" class="btn btn-primary">Tambah</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <p class="alert alert-info">Belum ada produk yang tersedia.</p>
        </div>
    <% } %>
</div>
<%- include('_footer') %>