<%- include('_header', { title: 'Selamat Datang' }) %>

<h1 id="homepage-title" class="reveal-on-scroll">Selamat Datang di CureCart Shop!</h1>
<p class="lead reveal-on-scroll">Lihat produk-produk terbaru kami.</p>

<div class="mb-4 reveal-on-scroll">
    <form action="/" method="GET" class="d-flex">
        <input 
            class="form-control me-2" 
            type="search" 
            placeholder="Cari produk di etalase..." 
            name="search" 
            aria-label="Search"
            value="<%= searchTerm %>" 
        >
        <button class="btn btn-success" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
        </button>
    </form>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            
            <div class="col reveal-on-scroll">
                
                <div class="card h-100 shadow-sm"> <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top bg-secondary text-white text-center" style="height: 200px; line-height: 200px;">No Image</div>
                    <% } %>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="<%= (user && user.is_admin) ? '/admin/products/edit/' + product.id : '/products/' + product.id %>" class="text-decoration-none stretched-link">
                                <%= product.name %>
                            </a>
                        </h5>
                        <p class="card-text text-muted">Stok: <%= product.stock_quantity %></p>
                        <h4 class="text-danger mt-auto">Rp <%= Number(product.price).toLocaleString('id-ID') %></h4>
                    </div>
                    
                    <div class="card-footer"> <% if (user && user.is_admin) { %>
                            <a href="/admin/products/edit/<%= product.id %>" class="btn btn-warning w-100" style="position: relative; z-index: 2;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.813z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                                Edit Produk
                            </a>
                        <% } else { %>
                            <form action="/cart/add/<%= product.id %>" method="POST" style="position: relative; z-index: 2;">
                                 <div class="input-group">
                                    <input type="number" name="quantity" class="form-control" value="1" min="1" max="<%= product.stock_quantity %>" onclick="event.stopPropagation();">
                                    <button type="submit" class="btn btn-primary" onclick="event.stopPropagation();">Tambah</button>
                                </div>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div> <% }) %> <% } else { %>
        <div class="col-12 reveal-on-scroll"> 
            <% if (searchTerm && searchTerm.length > 0) { %>
                <div class="alert alert-warning">
                    Produk dengan nama "<%= searchTerm %>" tidak ditemukan.
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    Belum ada produk yang tersedia.
                </div>
            <% } %>
        </div>
    <% } %>
</div> <%- include('_footer') %>