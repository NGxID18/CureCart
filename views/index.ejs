<%- include('_header', { title: 'Selamat Datang' }) %>

<div class="container">
    <h1 id="homepage-title" class="reveal-on-scroll fw-bold mb-3">Selamat Datang di CureCart!</h1>
    <p class="lead reveal-on-scroll text-muted mb-4">Temukan kebutuhan alat kesehatan terbaik Anda.</p>
    
    <div class="hero-banner reveal-on-scroll shadow">
        <div class="hero-content">
            <div class="hero-text-bg">
                <h2>Mau Transaksi Lebih Hemat?</h2>
                <p>Cek promo asyik CureCart Shop!</p>
            </div>
            <a href="/search" class="btn btn-orchid btn-lg">
                Cek Sekarang &rarr;
            </a>
        </div>
    </div>
    <h3 class="fw-bold mt-5 mb-3 reveal-on-scroll">Etalase Produk</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                
                <div class="col reveal-on-scroll">
                    
                    <div class="card h-100 border-0 shadow-sm"> 
                        <% if (product.image_url) { %>
                            <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="card-img-top bg-secondary text-white text-center" style="height: 200px; line-height: 200px;">No Image</div>
                        <% } %>
                        
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-1">
                                <a href="<%= (user && user.is_admin) ? '/admin/products/edit/' + product.id : '/products/' + product.id %>" class="text-decoration-none text-dark stretched-link text-truncate-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    <%= product.name %>
                                </a>
                            </h6>
                            <h5 class="fw-bold text-dark mt-2 mb-0">Rp <%= Number(product.price).toLocaleString('id-ID') %></h5>
                            <div class="mt-auto pt-2">
                                <small class="text-muted">Stok: <%= product.stock_quantity %></small>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-0 pt-0 pb-3">
                            <% if (user && user.is_admin) { %>
                                <a href="/admin/products/edit/<%= product.id %>" class="btn btn-warning w-100" style="position: relative; z-index: 2;">
                                    Edit Produk
                                </a>
                            <% } else { %>
                                <form action="/cart/add/<%= product.id %>" method="POST" style="position: relative; z-index: 2;">
                                     <div class="input-group">
                                        <input type="number" name="quantity" class="form-control text-center" value="1" min="1" max="<%= product.stock_quantity %>" onclick="event.stopPropagation();">
                                        <button type="submit" class="btn btn-orchid fw-bold" onclick="event.stopPropagation();">+ Keranjang</button>
                                    </div>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div> <% }) %> 
        <% } else { %>
            <div class="col-12 reveal-on-scroll text-center py-5"> 
                <div class="alert alert-light border">
                    <h4 class="alert-heading">Oops! Produk tidak ditemukan.</h4>
                    <p>Coba kata kunci lain atau kembali lagi nanti.</p>
                </div>
            </div>
        <% } %>
    </div> </div>

<%- include('_footer') %>