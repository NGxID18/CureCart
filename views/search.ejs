<%- include('_header', { title: 'Cari Produk' }) %>

<div class="row mt-4">
    
    <div class="col-lg-3 mb-4">
        <form action="/search" method="GET" id="filter-form">
            
            <div class="card shadow-sm border-0 mb-4 reveal-on-scroll">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Kategori</h5>
                    <div class="list-group list-group-flush">
                        <% categories.forEach(cat => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="category" value="<%= cat.id %>" id="cat-<%= cat.id %>"
                                    <%= (Array.isArray(query.category) && query.category.includes(String(cat.id))) ? 'checked' : (query.category == cat.id ? 'checked' : '') %>
                                >
                                <label class="form-check-label" for="cat-<%= cat.id %>">
                                    <%= cat.name %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 reveal-on-scroll">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Rentang Harga</h5>
                    <div class="mb-2">
                        <label for="min_price" class="form-label text-muted small">Harga Minimum</label>
                        <input type="number" name="min_price" id="min_price" class="form-control" placeholder="Rp 0" value="<%= query.min_price || '' %>">
                    </div>
                    <div class="mb-2">
                        <label for="max_price" class="form-label text-muted small">Harga Maksimum</label>
                        <input type="number" name="max_price" id="max_price" class="form-control" placeholder="Rp 10.000.000" value="<%= query.max_price || '' %>">
                    </div>
                </div>
            </div>

            <div class="d-grid reveal-on-scroll">
                <button type="submit" class="btn btn-orchid fw-bold">Terapkan Filter</button>
            </div>
            
            <input type="hidden" name="sort" value="<%= query.sort || 'newest' %>">
            <input type="hidden" name="q" value="<%= query.q || '' %>">
        </form>
    </div>

    <div class="col-lg-9">
        
        <div class="d-flex justify-content-between align-items-center mb-3 reveal-on-scroll">
            <h4 class="fw-bold text-dark m-0">
                <% if (query.q) { %>
                    Hasil pencarian "<%= query.q %>"
                <% } else { %>
                    Semua Produk
                <% } %>
                <span class="text-muted fs-6 fw-normal">(<%= products.length %>)</span>
            </h4>

            <div class="d-flex align-items-center">
                <span class="me-2 text-muted fw-bold">Urutkan:</span>
                <div class="dropdown">
                    <select class="form-select bg-white" id="sort-select">
                        <option value="newest" <%= (query.sort === 'newest' || !query.sort) ? 'selected' : '' %>>Terbaru</option>
                        <option value="price_asc" <%= query.sort === 'price_asc' ? 'selected' : '' %>>Harga Terendah</option>
                        <option value="price_desc" <%= query.sort === 'price_desc' ? 'selected' : '' %>>Harga Tertinggi</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-3">
            <% if (products && products.length > 0) { %>
                
                <% products.forEach(product => { %>
                    <div class="col reveal-on-scroll">
                        <div class="card h-100 border-0 shadow-sm"> 
                            <% if (product.image_url) { %>
                                <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 180px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-secondary text-white text-center" style="height: 180px; line-height: 180px;">No Image</div>
                            <% } %>
                            
                            <div class="card-body d-flex flex-column p-3">
                                <h6 class="card-title mb-1">
                                    <a href="<%= (user && user.is_admin) ? '/admin/products/edit/' + product.id : '/products/' + product.id %>" class="text-decoration-none text-dark stretched-link text-truncate-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        <%= product.name %>
                                    </a>
                                </h6>
                                <h5 class="fw-bold text-dark mb-2">Rp <%= Number(product.price).toLocaleString('id-ID') %></h5>
                                <div class="mt-auto">
                                    <small class="text-muted">Stok: <%= product.stock_quantity %></small>
                                </div>
                            </div>
                            
                            <div class="card-footer bg-white border-0 p-3 pt-0">
                                <% if (user && user.is_admin) { %>
                                    <a href="/admin/products/edit/<%= product.id %>" class="btn btn-warning w-100 btn-sm" style="position: relative; z-index: 2;">Edit</a>
                                <% } else { %>
                                    <form action="/cart/add/<%= product.id %>" method="POST" style="position: relative; z-index: 2;">
                                         <div class="input-group input-group-sm">
                                            <button type="submit" class="btn btn-orchid w-100 fw-bold" onclick="event.stopPropagation();">+ Keranjang</button>
                                        </div>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
                <% } else { %>
                <div class="col-12 text-center py-5 reveal-on-scroll"> 
                    <img src="https://assets.tokopedia.net/assets-tokopedia-lite/v2/zeus/kratos/60ee3424.png" width="200" alt="Kosong">
                    <h5 class="mt-3">Produk tidak ditemukan</h5>
                    <p class="text-muted">Coba ubah filter atau kata kunci pencarian Anda.</p>
                </div>
            <% } %>
        </div>
        
    </div>
</div>

<script>
    document.getElementById('sort-select').addEventListener('change', function() {
        const selectedSort = this.value;
        const form = document.getElementById('filter-form');
        form.querySelector('input[name="sort"]').value = selectedSort;
        form.submit();
    });
</script>

<%- include('_footer') %>