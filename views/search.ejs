<%- include('_header', { title: 'Cari Produk' }) %>

<div class="row mt-4">
    
    <div class="col-lg-3 mb-4">
        <form action="/search" method="GET" id="filter-form">
            
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Kategori</h5>
                    <div class="list-group list-group-flush">
                        <% categories.forEach(cat => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="category" value="<%= cat.id %>" id="cat-<%= cat.id %>"
                                    <%= (Array.isArray(query.category) && query.category.includes(String(cat.id))) ? 'checked' : (query.category == cat.id ? 'checked' : '') %>
                                >
                                <label class="form-check-label" for="cat-<%= cat.id %>">
                                    <%= cat.name %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">Rentang Harga</h5>
                    <div class="mb-2">
                        <label for="min_price" class="form-label text-muted small">Harga Minimum</label>
                        <input type="number" name="min_price" id="min_price" class="form-control" placeholder="Rp 0" value="<%= query.min_price || '' %>">
                    </div>
                    <div class="mb-2">
                        <label for="max_price" class="form-label text-muted small">Harga Maksimum</label>
                        <input type="number" name="max_price" id="max_price" class="form-control" placeholder="Rp 10.000.000" value="<%= query.max_price || '' %>">
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-orchid fw-bold">Terapkan Filter</button>
            </div>
            
            <input type="hidden" name="sort" value="<%= query.sort || 'newest' %>">
            <input type="hidden" name="q" value="<%= query.q || '' %>">
        </form>
    </div>

    <div class="col-lg-9">
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold text-dark m-0">
                <% if (query.q) { %>
                    Hasil pencarian "<%= query.q %>"
                <% } else { %>
                    Semua Produk
                <% } %>
                <span class="text-muted fs-6 fw-normal">(<%= products.length %>)</span>
            </h4>

            <div class="d-flex align-items-center">
                <span class="me-2 text-muted fw-bold">Urutkan:</span>
                <div class="dropdown">
                    <select class="form-select bg-white" id="sort-select">
                        <option value="newest" <%= query.sort === 'newest' ? 'selected' : '' %>>Terbaru</option>
                        <option value="price_asc" <%= query.sort === 'price_asc' ? 'selected' : '' %>>Harga Terendah</option>
                        <option value="price_desc" <%= query.sort === 'price_desc' ? 'selected' : '' %>>Harga Tertinggi</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-3">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col reveal-on-scroll">
                        <div class="card h-100 border-0 shadow-sm"> 
                            </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5 reveal-on-scroll"> 
                    <img src="https://assets.tokopedia.net/assets-tokopedia-lite/v2/zeus/kratos/60ee3424.png" width="200" alt="Kosong">
                    <h5 class="mt-3">Produk tidak ditemukan</h5>
                    <p class="text-muted">Coba ubah filter atau kata kunci pencarian Anda.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    document.getElementById('sort-select').addEventListener('change', function() {
        const selectedSort = this.value;
        const form = document.getElementById('filter-form');
        
        // Update nilai 'sort' di form
        form.querySelector('input[name="sort"]').value = selectedSort;
        
        // Submit form
        form.submit();
    });
</script>

<%- include('_footer') %>